page {
	background-color: #fff;
}

.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	color: #191919;
	background-color: #fff;
}

.friend-card {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.friend-item {
	width: 90%;
	padding: 30rpx 0rpx 30rpx 0rpx;
	display: flex;
	flex-direction: row;
	align-items: flex-start;
}

.avatar {
	overflow: hidden;
	width: 40px;
	height: 40px;
	flex-shrink: 0;
	margin-right: 16rpx;
	border-radius: 6rpx;
}

.item-block {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
}

.nickname {
	color: #5a6990;
	font-weight: bold;
	font-size: 16px;
}

.content {
	margin-top: 6rpx;
	font-size: 30rpx;
}

.image-block {
	margin-top: 30rpx;
	width: 100%;
}

.image-block image {
	width: 100%;
}

.tip {
	color: #a3a3a3;
	font-size: 26rpx;
	font-weight: normal;
}

.share-image {
	width: 48rpx;
	height: 48rpx;
}

button {
	background-color: #fff;
}

button::after {
	background-color: #fff;
}

button:hover {
	background-color: #fff;
}

.source-btn-block {
	display: flex;
	justify-content: center;
	flex-direction: row;
	margin-top: 50rpx;
	margin-bottom: 50rpx;
}